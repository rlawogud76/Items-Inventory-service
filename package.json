{
  "name": "inventory-management",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "web/server",
    "web/client"
  ],
  "scripts": {
    "server": "npm run start --workspace=web/server",
    "client": "npm run dev --workspace=web/client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --workspace=web/client",
    "start:prod": "node web/server/index.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
